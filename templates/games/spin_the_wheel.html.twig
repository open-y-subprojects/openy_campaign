<div class="spin-the-wheel">
  <h1>{{ title }}</h1>
  {{ description }}
  <div class="spin-the-wheel-inner">
    <div id="container" class="centered">
      <canvas id="drawing_canvas"></canvas>
      <div id="status_label">loading...</div>
    </div>
    <div class="active start btn">Spin the wheel</div>
  </div>
  <div class="game-result">
    <section class="container">

            <div class="game-result--header">
              <h3 class="title">{{ messageTitle }}</h3>
              <p>{{ message|raw }}</p>
            </div>
          <div class="game-result--body">
              <div class="card--wrapper">
                  <div class="card">
                {% if isWinner %}
                  Win
                {% else %}
                  Loose
                {% endif %}
                  </div>
              </div>
          </div>
    </section>
  </div>
</div>
<div class="load-bar">
  <div class="bar"></div>
  <div class="bar"></div>
  <div class="bar"></div>
</div>
